<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.completecoverageit.fartsounds.MainActivity"
    android:background="#000000"
    android:clickable="true"
    android:foregroundGravity="top">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top"
        android:focusableInTouchMode="true">

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Fart Sound Board"
                    android:id="@+id/textView"
                    android:layout_weight="1"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:textSize="35sp"
                    android:gravity="center_horizontal"
                    android:onClick="goToMainMenu"
                    android:typeface="serif" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top">

                <Button
                    android:text="MAIN MENU"
                    android:id="@+id/returnHome"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="goToMainMenu"
                    android:textColor="#ffffff"
                    android:typeface="serif"
                    android:background="#000000" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/fart01"
                    android:layout_weight="1"
                    android:onClick="fart01"
                    android:text="Grunt"
                    android:background="@drawable/circleblue"
                    android:textSize="12sp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Deep Bass"
                    android:id="@+id/fart02"
                    android:layout_weight="1"
                    android:onClick="fart02"
                    android:background="@drawable/circlered"
                    android:textSize="12sp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="That Hurt"
                    android:id="@+id/fart03"
                    android:layout_weight="1"
                    android:onClick="fart03"
                    android:background="@drawable/circleyellow"
                    android:textSize="12sp" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Echo"
                    android:id="@+id/fart04"
                    android:layout_weight="1"
                    android:onClick="fart04"
                    android:background="@drawable/circleorange"
                    android:textSize="12sp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Painful"
                    android:id="@+id/fart05"
                    android:layout_weight="1"
                    android:onClick="fart05"
                    android:background="@drawable/circlegreen"
                    android:textSize="12sp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Screamer"
                    android:id="@+id/fart06"
                    android:layout_weight="1"
                    android:onClick="fart06"
                    android:background="@drawable/circlepurple"
                    android:textSize="12sp" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Duck Vomit"
                    android:id="@+id/fart07"
                    android:layout_weight="1"
                    android:onClick="fart07"
                    android:background="@drawable/circleblue"
                    android:textSize="12sp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Ringer"
                    android:id="@+id/fart08"
                    android:layout_weight="1"
                    android:onClick="fart08"
                    android:background="@drawable/circlered"
                    android:textSize="12sp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Gurgling"
                    android:id="@+id/fart09"
                    android:layout_weight="1"
                    android:onClick="fart09"
                    android:background="@drawable/circleyellow"
                    android:textSize="12sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Letting Go"
                    android:id="@+id/fart10"
                    android:layout_weight="1"
                    android:onClick="fart10"
                    android:background="@drawable/circleorange"
                    android:textSize="12sp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Runner"
                    android:id="@+id/fart11"
                    android:layout_weight="1"
                    android:onClick="fart11"
                    android:background="@drawable/circlegreen"
                    android:textSize="12sp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Add Oil"
                    android:id="@+id/fart12"
                    android:layout_weight="1"
                    android:onClick="fart12"
                    android:background="@drawable/circlepurple"
                    android:textSize="12sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Morse Code"
                    android:id="@+id/fart13"
                    android:layout_weight="1"
                    android:onClick="fart13"
                    android:background="@drawable/circleblue"
                    android:textSize="12sp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Squeeze"
                    android:id="@+id/fart14"
                    android:layout_weight="1"
                    android:onClick="fart14"
                    android:background="@drawable/circlered"
                    android:textSize="12sp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Close Call"
                    android:id="@+id/fart15"
                    android:layout_weight="1"
                    android:onClick="fart15"
                    android:background="@drawable/circleyellow"
                    android:textSize="12sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Cheesy"
                    android:id="@+id/fart16"
                    android:layout_weight="1"
                    android:onClick="fart16"
                    android:background="@drawable/circleorange"
                    android:textSize="12sp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Linger"
                    android:id="@+id/fart17"
                    android:layout_weight="1"
                    android:onClick="fart17"
                    android:background="@drawable/circlegreen"
                    android:textSize="12sp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Uh Oh"
                    android:id="@+id/fart18"
                    android:layout_weight="1"
                    android:onClick="fart18"
                    android:background="@drawable/circlepurple"
                    android:textSize="12sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Juicy"
                    android:id="@+id/fart19"
                    android:layout_weight="1"
                    android:onClick="fart19"
                    android:background="@drawable/circleblue"
                    android:textSize="12sp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Grip N Rip"
                    android:id="@+id/fart20"
                    android:layout_weight="1"
                    android:onClick="fart20"
                    android:background="@drawable/circlered"
                    android:textSize="12sp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Blow Out"
                    android:id="@+id/fart21"
                    android:layout_weight="1"
                    android:onClick="fart21"
                    android:background="@drawable/circleyellow"
                    android:textSize="12sp" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/fart22"
                    android:layout_weight="1"
                    android:onClick="fart22"
                    android:text="NonStop"
                    android:background="@drawable/circleblue"
                    android:textSize="12sp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="PreLaunch"
                    android:id="@+id/fart24"
                    android:layout_weight="1"
                    android:onClick="fart24"
                    android:background="@drawable/circleyellow"
                    android:textSize="12sp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Darth Vader"
                    android:id="@+id/fart28"
                    android:layout_weight="1"
                    android:onClick="fart28"
                    android:background="@drawable/circleblue"
                    android:textSize="12sp" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Every Drop"
                    android:id="@+id/fart31"
                    android:layout_weight="1"
                    android:onClick="fart31"
                    android:background="@drawable/circleorange"
                    android:textSize="12sp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Howl"
                    android:id="@+id/fart33"
                    android:layout_weight="1"
                    android:onClick="fart33"
                    android:background="@drawable/circlepurple"
                    android:textSize="12sp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Crap"
                    android:id="@+id/fart38"
                    android:layout_weight="1"
                    android:onClick="fart38"
                    android:background="@drawable/circlegreen"
                    android:textSize="12sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Squash"
                    android:id="@+id/fart39"
                    android:layout_weight="1"
                    android:onClick="fart39"
                    android:background="@drawable/circlepurple"
                    android:textSize="12sp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Flubber"
                    android:id="@+id/fart40"
                    android:layout_weight="1"
                    android:onClick="fart40"
                    android:background="@drawable/circleblue"
                    android:textSize="12sp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="WET N JUICY"
                    android:id="@+id/fart41"
                    android:layout_weight="1"
                    android:onClick="fart41"
                    android:background="@drawable/circlered"
                    android:textSize="12sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.gms.ads.AdView
                    android:id="@+id/adView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    ads:adSize="BANNER"
                    ads:adUnitId="@string/banner_ad_unit_id"
                    android:gravity="center_horizontal">
                </com.google.android.gms.ads.AdView>
            </TableRow>

        </TableLayout>


    </RelativeLayout>

</ScrollView>
